<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/blood_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp"
        android:background="#FCFCFC"
        android:contentDescription="Green, Blue, Orange, Red BS Indicator"
        android:rotation="180"
        app:srcCompat="@drawable/tracker_droplet_img" />

    <TextView
        android:id="@+id/tv_cust_bloodSugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="2dp"
        android:text="BS Input Box"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_cust_mealDetails"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="1dp"
        android:text="Meal Details Info Box"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_cust_lastDose"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toEndOf="@+id/tv_cust_bloodSugar"
        android:layout_toRightOf="@+id/tv_cust_bloodSugar"
        android:text="LastDose Input Box"
        android:textSize="15sp" />

</RelativeLayout>
